{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "email_enabled",
    "lojista_mail"
  ],
  "properties": {
    "email_enabled": {
      "$id": "#/properties/email_enabled",
      "type": "array",
      "title": "Habilitar E-mails",
      "description": "Selecione quais trigger que terão e-mails enviados",
      "items": {
        "$id": "#/properties/email_enabled/items",
        "type": "object",
        "required": [
          "trigger",
          "sent"
        ],
        "properties": {
          "trigger": {
            "$id": "#/properties/email_enabled/items/properties/trigger",
            "type": "string",
            "enum": [
              "boas-vindas",
              "carrinho-abandonado",
              "nota-fiscal",
              "pacote-enviado",
              "pagamento-aprovado",
              "pedido-recebido",
              "produto-entregue"
            ],
            "title": "Gatilhos",
            "description": "Gatilho de e-mail"
          },
          "sent": {
            "$id": "#/properties/email_enabled/items/properties/sent",
            "type": "object",
            "title": "Enviar email para",
            "description": "Define se o customer e o lojista receberam cópia dos e-mails disparados.",
            "additionalProperties": false,
            "required": [
              "toCustomer",
              "ccToLojista"
            ],
            "properties": {
              "toCustomer": {
                "$id": "#/properties/email_enabled/items/properties/sent/properties/toCustomer",
                "type": "boolean",
                "title": "Enviar e-mail para o cliente",
                "description": "Se ativado o cliente será notificado sempre que houver ação do trigger",
                "default": true
              },
              "ccToLojista": {
                "$id": "#/properties/email_enabled/items/properties/sent/properties/ccToLojista",
                "type": "boolean",
                "title": "Cópia lojista",
                "description": "Se configurada a opção, o logista é informado sempre que o trigger for acionado.",
                "default": false
              }
            }
          }
        }
      }
    },
    "lojista_mail": {
      "type": "string",
      "title": "E-mail do Lojista",
      "description": "E-mail que será copiado nos triggers"
    }
  }
}