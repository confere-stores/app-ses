{
  "app_id": 1244,
  "state": "active",
  "title": "E-mail gateway AWS SES",
  "slug": "app-ses",
  "paid": false,
  "version": "0.4.9",
  "version_date": "2019-04-03T03:00:00.000Z",
  "type": "external",
  "script_uri": "https://ses.ecomplus.biz/",
  "status": "active",
  "authentication": true,
  "auth_callback_uri": "https://ses.ecomplus.biz/ecom/auth-callback",
  "admin_settings": {
    "transaction_mail": {
      "schema": {
        "type": "array",
        "title": "Habilitar E-mails",
        "description": "Selecione quais trigger que terão e-mails enviados",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": [
            "trigger",
            "to"
          ],
          "properties": {
            "trigger": {
              "type": "string",
              "enum": [
                "abandonedCart",
                "authorized",
                "delivered",
                "inDispute",
                "inProduction",
                "inSeparation",
                "invoiceIssued",
                "new_order",
                "paid",
                "partiallyDelivered",
                "partiallyPaid",
                "partiallyRefunded",
                "partiallyShipped",
                "pending",
                "readyForShipping",
                "receivedForExchange",
                "refunded",
                "returned",
                "returnedForExchange",
                "shipped",
                "unauthorized",
                "underAnalysis",
                "voided",
                "welcome"
              ],
              "title": "Gatilhos",
              "description": "Gatilho de e-mail"
            },
            "to": {
              "type": "object",
              "title": "Enviar email para",
              "description": "Define se o customer e o lojista receberam cópia dos e-mails disparados.",
              "additionalProperties": false,
              "required": [
                "customer",
                "storekeeper"
              ],
              "properties": {
                "customer": {
                  "type": "boolean",
                  "title": "Enviar e-mail para o cliente",
                  "description": "Se ativado o cliente será notificado sempre que houver ação do trigger",
                  "default": true
                },
                "storekeeper": {
                  "type": "boolean",
                  "title": "Cópia lojista",
                  "description": "Se configurada a opção, o logista é informado sempre que o trigger for acionado.",
                  "default": false
                }
              }
            }
          }
        }
      },
      "hide": false
    },
    "lojista_mail": {
      "schema": {
        "type": "string",
        "title": "E-mail do Lojista",
        "description": "E-mail que será copiado nos triggers"
      },
      "hide": false
    },
    "is_abandoned_after_days": {
      "hide": false,
      "schema": {
        "type": "integer",
        "title": "Carrinho Abandonado",
        "description": "Após quantos dias avisar ao comprador sobre o carrinho abandonado"
      }
    }
  },
  "auth_scope": {
    "stores": [
      "GET"
    ],
    "stores/me": [
      "GET"
    ],
    "orders": [
      "GET"
    ],
    "customers": [
      "GET"
    ],
    "carts": [
      "GET"
    ],
    "procedures": [
      "POST",
      "GET",
      "PUT",
      "PATCH",
      "DELETE"
    ],
    "orders/payments_history": [
      "GET",
      "POST",
      "PATCH"
    ],
    "orders/fulfillments": [
      "GET",
      "POST",
      "PATCH"
    ],
    "orders/hidden_metafields": [
      "POST"
    ]
  }
}
